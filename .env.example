# Server Configuration
PORT=3000
NODE_ENV=production

# Demo Mode (set to true to bypass authentication for testing UI)
DEMO_MODE=true

# Firebase Admin SDK (Service Account)
# Download from: Firebase Console > Project Settings > Service Accounts > Generate new private key
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project_id.iam.gserviceaccount.com

# Encryption Key for Client Credentials (Generate a secure 32-byte hex key)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_64_character_hex_encryption_key_here

# PayPal Configuration
# Get from: https://developer.paypal.com/dashboard/applications
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox
# Change to 'live' for production

# License Pricing
ANNUAL_LICENSE_PRICE=299.00
ANNUAL_LICENSE_CURRENCY=USD

# Admin Email (for first admin account creation)
ADMIN_EMAIL=your_admin_email@example.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100